<%- include('../partials/header') %>


<div id="show-page" class="container">
  <div class="row">
    <div class="col s4">Part Number:</div>
    <div class="col s4">Description:</div>
    <div class="col s4">Qty in Stock</div>
  </div>
  <div class="row">
    <div class="col s4"><%= part.partNumber %></div>
    <div class="col s4"><%= part.description %></div>
    <div class="col s4"><%= part.quantity %></div>
  </div>
</div><br><br>


<table class="highlight centered responsive-table">
  <thead>
   <tr>
      <th>Invoice Number</th>
      <th>Qty Received</th>
      <th>Date Received</th>
    </tr>
  </thead>
  <tbody>
    <% invoices.map(i => { %>
    <tr>
      <td><%= i.invoiceNumber %></td>
      <td><%= i.invoiceQty %></td>
      <td><%= i.dateReceived %></td>
      <% }) %>
    </tr>
  </tbody>
</table>



