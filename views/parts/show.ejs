<%- include('../partials/header') %>


<div id="show-page" class="container center">
  <div class="row">
    <div class="col s6">Part Number:</div>
    <div class="col s6">Description:</div>
  </div>
  <div class="row">
    <div class="col s6"><%= part.partNumber %></div>
    <div class="col s6"><%= part.description %></div>
  </div>
  <div class="row">
    <div class="col 12">Qty in Stock</div>
  </div>
    <div class="row">
      <div class="col 12"><%= part.quantity %></div>
    </div>
</div><br><br>


<table class="centered">
  <thead>
   <tr>
      <th>Invoice Number</th>
      <th>Qty Received</th>
      <th>Date Received</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% invoices.map(i => {%>
      <td><%= i.invoiceNumber %></td>
      <td><%= i.invoiceQty %></td>
      <td><%= i.dateReceived %></td>
      <% }) %>
    </tr>
  </tbody>
</table>


